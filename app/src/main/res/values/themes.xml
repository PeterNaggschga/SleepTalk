<resources>
    <!-- Base application theme. -->
    <style name="Theme.SleepTalk" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Theme for NumberPickers TODO: use dimens for textSize -->
    <style name="Theme.NumberPicker" parent="Theme.SleepTalk">
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
