<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.monitoring.MonitoringFragment">

    <TextView
        android:id="@+id/text_monitoring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/layout_show_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.NumberPicker"
        app:layout_constraintBottom_toTopOf="@id/button_choose_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_monitoring">

        <NumberPicker
            android:id="@+id/number_picker_hours"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintEnd_toStartOf="@id/text_hour_minute_separator"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="@id/number_picker_hours"
            app:layout_constraintEnd_toEndOf="@id/number_picker_hours"
            app:layout_constraintStart_toStartOf="@id/number_picker_hours"
            app:layout_constraintTop_toTopOf="@id/number_picker_hours"
            tools:ignore="KeyboardInaccessibleWidget" />

        <TextView
            android:id="@+id/text_hour_minute_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=":"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/number_picker_minutes"
            app:layout_constraintStart_toEndOf="@id/number_picker_hours"
            app:layout_constraintTop_toTopOf="parent" />

        <NumberPicker
            android:id="@+id/number_picker_minutes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_hour_minute_separator" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="@id/number_picker_minutes"
            app:layout_constraintEnd_toEndOf="@id/number_picker_minutes"
            app:layout_constraintStart_toStartOf="@id/number_picker_minutes"
            app:layout_constraintTop_toTopOf="@id/number_picker_minutes"
            tools:ignore="KeyboardInaccessibleWidget" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- TODO: extra layout for landscape orientation -->

    <Button
        android:id="@+id/button_choose_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose time"
        app:layout_constraintBottom_toTopOf="@id/button_start_monitoring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_show_time" />

    <Button
        android:id="@+id/button_start_monitoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start service"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_choose_time" />
</androidx.constraintlayout.widget.ConstraintLayout>
